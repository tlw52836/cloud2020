<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tlw.springcloud.dao.PaymentDao">
    <insert id="create" parameterType="com.tlw.springcloud.entities.Payment" useGeneratedKeys="true" keyProperty="id">
        insert into payment(serial) values(#{serial})
    </insert>

    <resultMap id="BaseResultMap" type="com.tlw.springcloud.entities.Payment">
        <id property="id" column="id"/>
        <result property="serial" column="serial"/>
    </resultMap>
    <select id="getPaymentById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select id, serial from payment where id = #{id}
    </select>
</mapper>